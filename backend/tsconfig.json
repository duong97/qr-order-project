{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
    ],
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
  ]
}